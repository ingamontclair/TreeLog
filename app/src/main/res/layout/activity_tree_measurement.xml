<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tree_measurement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.puma.treelog.TreeMeasurement">
    <TextView
    android:textColor="#212121"
    android:textSize="18sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/species_of_the_tree"
    />
    <EditText
        android:id="@+id/edit_species"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_species_of_the_tree"
        />
    <TextView
        android:textColor="#212121"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_of_the_tree"
        />
    <EditText
        android:id="@+id/edit_treetype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="chose tree type from list"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When the tree was planted (apprx)"
        />
    <EditText
        android:id="@+id/edit_planted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter date when planted"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diametr of the tree"
        />
    <EditText
        android:id="@+id/edit_diametr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter diametr"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size of the tree"
        />
    <EditText
        android:id="@+id/edit_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter size of the tree"
        />
    <Button
        android:id="@+id/btn_next_meas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        />

</LinearLayout>
